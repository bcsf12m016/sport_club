                        </div>
                        <div class="input-group ctrlHolder form-group">
                            <input type="submit" value="Submit" class="btn btn-primary" />

                        </div>

                        @ViewBag.Messgae
                    </form>
                           
                       </div>
        </div>
        <div class="row text-center">


            <div class="col-md-12">
                
                <div class="head-set">
                </div>
            </div>

        </div>
    </div>
