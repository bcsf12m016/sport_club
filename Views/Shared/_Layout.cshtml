                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div class="navbar-collapse collapse navbar-right scroll-me">

                @if (Request.IsAuthenticated)
                {

                    <ul class="nav navbar-nav ">
                        <li><a href="#home">HOME</a></li>
                        <li><a href="#services">FEATURES</a></li>
                        <li><a href="#works">ABOUT US</a></li>
                        <li><a href="#contact">CONTACT</a></li>
                        <li><h4 style="align-self:center">  <a href="/Team/TeamIndex" class="btn btn-primary" style="color:white">DASHBOARD<i class="fa fa-dashboard"></i></a></h4></li>
                        
                        <li>
                            &nbsp;&nbsp;
                            <strong><a href="/Account/Register" style="color:white">@Session["Name"]</a>  </strong>@Html.ActionLink("LOG OUT", "Logout", "Account")



                           
                        </li>
                    </ul>

                }
                else
                {
                    <ul class="nav navbar-nav ">
                        <li><a href="#home">HOME</a></li>
                        <li><a href="#services">FEATURES</a></li>
                        <li><a href="#works">ABOUT US</a></li>
                        <li><a href="#contact">CONTACT</a></li>
                        <li> <a href="#modal-login" data-toggle="modal">LOGIN&nbsp;<i class="fa fa-arrow-right blue"></i></a></li>
   
                        </ul>
                }
            </div>

        </div>
    </div>
    <!-- NAVBAR CODE END -->
    
        <!-- // Login -->


        <!-- Modal -->            
        <div class="modal fade tiny" id="modal-login" tabindex="-1" role="dialog" aria-hidden="true" style="display:none">
            <div class="modal-dialog layout-login">
                <div class="modal-content">

                    <div class="modal-body">
                       

                        <p style="color:green"><span class='white bold block text-center margin-bottom-small'>Not a member yet?</span></p>
                        <a href="#modal-register" data-toggle="modal" class="btn btn-block btn-lg btn-success margin-bottom">Create a free account&nbsp;&nbsp;<i class='fa fa-arrow-right'></i></a>



                        <div class='panel themenav-border boxshadow-darkblue'>
                            <div class='panel-encase'>

                                <h3 class="margin-bottom margin-top text-center uppercase"><i class='fa fa-lock'></i>&nbsp;&nbsp;<b>Login</b></h3>

                                @using (Html.BeginForm("Login", "Account",FormMethod.Post))
                                {
                                    @Html.ValidationSummary(true)
                                    
                                           <div class="form-group ctrlHolder input-group">
	                                            <span class="input-group-addon"><b>@@</b></span>
	
	                                            <input class="form-control text" id="Email" name="Email" placeholder="Enter Email " size="15" type="text" required/>
	
                                            </div>
                                            <div class="input-group ctrlHolder form-group">
	                                            <span class="input-group-addon">&nbsp;<i class="fa fa-lock"></i></span>
	                                            <input class="form-control text" id="Password" name="Password" placeholder="Enter Password" size="15" type="password" required/>
                                            </div>

                                    <h6 style="color:black">@Html.CheckBoxFor(m => m.RememberMe.HasValue)   @Html.LabelFor(m => m.RememberMe) </h6>
                                    
                                    <div>

                                        <h4> <input type="submit" value="Login" class='btn btn-primary margin-bottom-small btn-block btn-lg' data-loading-text="Logging in"  /></h4>
                                    </div>


                                }

                                @{ Html.EndForm();}

                                    <hr class='transparent'>

                                    <div class="buttonHolder">

       
                                    </div>
        
                            </div>
                            <div class='panel-footer'>
                                
                            </div>
                        </div>

                        <a data-dismiss="modal" class='white'>Close &times;</a>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- // modal-login -->
        <!-- modal-signup -->
        


        <!-- // Registeration -->



        <div class="modal fade tiny" id="modal-register" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog layout-login">
                <div class="modal-content">

                    <div class="modal-body">

                        <div class='panel themenav-border boxshadow-darkblue'>
                            <div class='panel-encase'>

                                <h2 class="margin-bottom margin-top text-center uppercase"><i class='fa fa-bars'></i>&nbsp;&nbsp;<b>Register</b></h2>


                @using (Html.BeginForm("Add", "Account", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)


                     <div class="form-group ctrlHolder input-group">
	                                            <span class="input-group-addon"><b><i class="fa fa-smile-o"></i></b></span>
	
                         <input class="form-control text" id="Name" name="Name" placeholder="Name " size="15" type="text" spellcheck="true" required>
	
                                            </div>
                                 <div class="form-group ctrlHolder input-group">
	                                            <span class="input-group-addon"><b>@@</b></span>
	
                                     <input class="form-control text" id="Email" name="Email" placeholder="Email " size="15" type="text" spellcheck="true" required>
	
                                            </div>
                                            <div class="input-group ctrlHolder form-group">
	                                            <span class="input-group-addon">&nbsp;<i class="fa fa-lock"></i></span>
	                                            <input class="form-control text" id="Password" name="Password" placeholder="Password" size="15" type="password" required>
                                            </div>

                                <h3>@Html.LabelFor(m => m.SportsType)</h3>

                                <h6 style="color:black">
                                    @Html.DropDownListFor(m => m.SportsType,
                                              new List<SelectListItem> {
                                                   new SelectListItem { Value = "Football" , Text = "Football" },
                                                   new SelectListItem { Value = "Cricket" , Text = "Cricket" },
                                                   new SelectListItem { Value = "Hockey" , Text = "Hockey" }
                                                },
                                              new { @class = "myselect" })@Html.ValidationMessageFor(m => m.SportsType)
                                        </h6>

                            <br />
                    
                                    <div>

                                        <h4> <input class="btn btn-block btn-lg btn-success margin-bottom "  type="submit" value="Register"  style="color:white" /></h4>
                                    </div>

                }
                @{ Html.EndForm();}







                                <hr class='transparent'>

                                <div class="buttonHolder">


                                    


                                    <p>

                                    </p>

                                </div>


                            </div>
                         
                        </div>
                       <a data-dismiss="modal" class='white'>Close &times;</a>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- // modal-login -->
        <!-- modal-signup -->
        


        <div id="home">
        <div class="overlay">
            <!-- overylay class usage -->
            <div class="container">
                <div class="col-md-8 col-md-offset-2 text-center">

                    <h1>SPORTS CLUB </h1>
                    <h2>TAKE THE HASSLE OUT OF ORGANIZING </h2>
                    <p class="p-cls">
                        Create & Manage your own team
                    </p>
                </div>

            </div>
        </div>

    </div>
    <!--HOME SECTION END  -->
    <section id="services">
