    <section id="contact">
        <div class="container">
        <div class="row text-center ">
            <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                
                <br />
                
                    <form action="#" method="post" >

                        <div class="input-group ctrlHolder form-group">
                                         <h2>Contact Us</h2> 
                                               </div>
                        <div class="input-group ctrlHolder form-group">
                            <input class="form_row"  id="contactName" name="contactName" placeholder="Name" maxlength="15" size="30" type="text" spellcheck="true" required>

                        </div>
                        <div class="input-group ctrlHolder form-group">
                            <input class="form_row" id="contactSubject" name="contactSubject" placeholder="Subject" maxlength="15" size="30" type="text" spellcheck="true" required>

                        </div>

                        <div class="input-group ctrlHolder form-group">
